<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tiWriter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageDegree0"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editWriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Writer"
            />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageDegree0"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/shape_degree0"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toLeftOf="@+id/imageDegree1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tiWriter"
        app:layout_constraintBottom_toBottomOf="@id/tiWriter"
        />

    <ImageView
        android:id="@+id/imageDegree1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/shape_degree1"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toLeftOf="@+id/imageDegree2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tiWriter"
        app:layout_constraintBottom_toBottomOf="@id/tiWriter"
        />

    <ImageView
        android:id="@+id/imageDegree2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/shape_degree2"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toLeftOf="@+id/imageDegree3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tiWriter"
        app:layout_constraintBottom_toBottomOf="@id/tiWriter"
        />

    <ImageView
        android:id="@+id/imageDegree3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/shape_degree3"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toLeftOf="@+id/imageDegree4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tiWriter"
        app:layout_constraintBottom_toBottomOf="@id/tiWriter"
        />

    <ImageView
        android:id="@+id/imageDegree4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/shape_degree4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tiWriter"
        app:layout_constraintBottom_toBottomOf="@id/tiWriter"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tiTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiWriter"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tiContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiTitle"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonSubmit"
        app:layout_constraintTop_toBottomOf="@id/tiContent"
        />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintLeft_toRightOf="@id/buttonCancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiContent"
        />
</android.support.constraint.ConstraintLayout>